        def initialize(operation: <%= HanamiId.app_name %>::Interactors::Passwords::Create.new)
          @operation = operation
        end

        params do
          required(:password).schema do
            required(:login).filled(:str?, format?: URI::MailTo::EMAIL_REGEXP)
          end
        end

        def call(params)
          result = @operation.call(params)
          if result.success?
            flash[:success] = I18n.t('hanami_id.passwords.send_instructions')
            redirect_to routes.root_path
          else
            flash[:error] = I18n.t('hanami_id.failure.invalid')
            self.status = 422
          end
        end