<div class="passwordBox animated fadeIn">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox-content">
        <h1 class="font-bold"><%= t('user.forgot_password') %>
        </h1>
        <p><%= t('user.enter_email_to_remember_password') %>
        </p>
        <div class="row">
          <div class="col-lg-12">
            <% _slim_controls1 = form_for resource, as: resource_name, url: password_path(resource_name), class: 'm-t', method: :post do |f|%>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, required: true, class: 'form-control' %>
            </div>
            <div class="actions">
              <%= f.submit t('user.password_instructions'), class: "btn btn-primary block full-width m-b" %>
            </div>
          <% end %><%= _slim_controls1 %><%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
<hr />
