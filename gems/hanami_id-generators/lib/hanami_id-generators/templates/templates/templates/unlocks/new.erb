<div class="passwordBox animated fadeInDown">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox-content">
        <h1 class="font-bold"><%= t('user.unlock_account') %></h1>
        <p><%= t('user.resend_unlock_instructions') %></p>
        <% _slim_controls1 = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|%>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit t('user.unlock_account'), class: "btn btn-primary block full-width m-b" %>
          </div>
        <% end %><%= _slim_controls1 %><%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
