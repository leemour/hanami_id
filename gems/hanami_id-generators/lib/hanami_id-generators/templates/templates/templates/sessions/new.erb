<div class="middle-box text-center loginscreen animated fadeIn">
  <div class="ibox-content">
    <div class="session-logo">
      <%= image_tag 'logo-simpllo.png' %>
    </div>
    <h2><%= t 'common.welcome' %>

    </h2><%= render 'common/flash' %>

    <% _slim_controls1 = form_for(User.new, url: user_session_path, class: "m-t") do |f|%>
      <%= devise_error_messages! %>
  
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', autofocus: true, required: true %>
      </div>
  
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', required: true, autocomplete: "off" %>
      </div><% if devise_mapping.rememberable?%>
  
      <div class="form-group">
        <% _slim_controls2 = f.label :remember_me do%>
          <%= f.check_box :remember_me, class: 'center-vertically' %>
          <%= " #{t('form.remember_me')}" %>
        <% end %><%= _slim_controls2 %>
      </div>
      <% end %><%= f.submit t('user.log_in'), class: "btn btn-primary block full-width m-b", data: {disable_with: t('common.processing')} %>
  
    <% end %><%= _slim_controls1 %><%= link_to t('user.forgot_password'), new_user_password_path %>
  </div>
  <p class="m-t">
    <small>Â© <%= Time.now.year %> <%= company_name %>. <%= t 'common.copyright' %>.</small>
  </p>
</div>
