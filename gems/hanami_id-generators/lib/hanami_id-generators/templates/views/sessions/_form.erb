# frozen_string_literal: true

module <%= HanamiId.classify app %>
  module Views
    module Sessions
      module Form
        def form
          form_for :sessions, routes.sessions_path do
            label :login, I18n.t("hanami_id.sessions.new.login")
            email_field :login

            label :password, I18n.t("hanami_id.sessions.new.password")
            password_field :password

            submit I18n.t('hanami_id.sessions.new.action')
          end
        end
      end
    end
  end
end
