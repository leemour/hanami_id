# frozen_string_literal: true

module <%= HanamiId.classify app %>
  module Views
    module Sessions
      module Form
        def title
          t("hanami_id.sessions.new.authorization")
        end

        def form
          form_for :sessions, routes.sessions_path do
            label t("hanami_id.sessions.new.login"), for: :login
            email_field :login

            label t("hanami_id.sessions.new.password"), for: :password
            password_field :password

            submit t('hanami_id.sessions.new.action')
          end
        end
      end
    end
  end
end
