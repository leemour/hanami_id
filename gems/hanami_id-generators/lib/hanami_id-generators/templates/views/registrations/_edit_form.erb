# frozen_string_literal: true

module <%= HanamiId.classify app %>
  module Views
    module Registrations
      module EditForm
        def form
          form_for :registrations, routes.registrations_path do
            label :login, I18n.t("hanami_id.registrations.edit.login")
            email_field :login

            label :new_password, I18n.t("hanami_id.registrations.edit.new_password")
            password_field :new_password

            label :new_password_confirmation, I18n.t("hanami_id.registrations.edit.new_password_confirmation")
            password_field :new_password_confirmation

            label :current_password, I18n.t("hanami_id.registrations.edit.current_password")
            password_field :current_password

            submit I18n.t("hanami_id.registrations.edit.action")
          end
        end
      end
    end
  end
end
