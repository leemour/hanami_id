# frozen_string_literal: true

module <%= HanamiId.classify app %>
  module Views
    module Registrations
      class Create
        include <%= HanamiId.classify app %>::View

        def form
          form_for :registration, routes.registrations_path do
            label :email
            email_field :email

            label :password
            password_field :password

            label :password_confimation
            password_field :password_confimation

            submit I18n.t('hanami_id.registrations.new.sign_up')
          end
        end
      end
    end
  end
end
