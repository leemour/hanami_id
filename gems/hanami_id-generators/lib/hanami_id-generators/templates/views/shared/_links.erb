# frozen_string_literal: true

module <%= HanamiId.classify app %>
  module Views
    module Links
      def show_links
        if controller_name != 'sessions'
          link_to t(user.log_in), new_session_path
        end

        if mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          link_to t('user.forgot_password'), new_password_path
        end

        if mapping.confirmable? && controller_name != 'confirmations'
          link_to t('user.no_confirm_instructions'), new_confirmation_path
        end

        if mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
          link_to t('user.no_unlock_instructions'), new_unlock_path(resource_name)
        end
      end 
    end
  end
end
