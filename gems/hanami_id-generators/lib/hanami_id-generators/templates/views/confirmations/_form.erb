# frozen_string_literal: true

module <%= HanamiId.classify app %>
  module Views
    module Confirmations
      module Form
        def title
          t("hanami_id.confirmations.new.confirmation_instructions")
        end

        def form
          form_for :confirmations, routes.confirmations_path do
            label :email
            email_field :email

            submit t('hanami_id.confirmations.new.resend_confirmation_instructions')
          end
        end
      end
    end
  end
end
