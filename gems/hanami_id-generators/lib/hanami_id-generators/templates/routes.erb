<% if modules.include? 'sessions' -%>
resources :sessions, only: [:new, :create, :delete]
<% end -%>
<% if modules.include? 'registrations' -%>
resources :registrations
<% end -%>
<% if modules.include? 'passwords' -%>
resources :passwords, only: [:new, :create, :update] do
  collection do
    get '/reset', to: 'passwords#edit'
  end
end
<% end -%>
